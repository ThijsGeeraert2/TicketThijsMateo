@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model TicketThijsMateo.ViewModels.ShoppingCartVM

@{
    ViewData["Title"] = "Index";
}

<h3>
    <em>Review</em> your cart:
</h3>



@if (Model.Ticket != null)
{

    <form asp-action="Payment" class="form-control mb-3">
        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Ticket[0].WedstrijdId)

                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Ticket[0].Betaald)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ticket[0].Voornaam)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ticket[0].Familienaam)

                </th>
        
            </tr>

            @foreach (var item in Model.Ticket)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.WedstrijdId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Betaald)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Voornaam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Familienaam)
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-bierNr="@item.WedstrijdId">

                            <img src="~/Images/delete.png" style="width:25px;height:25px"/>
                        </a>

                    </td>
                </tr>
            }

      @*       <tr>
                <td>
                    <input type="submit" value="Checkout"
                           class="btn btn-default" />
                </td>
            </tr>
            <tr>

                <td id="cart-total">
                    Total  <input id="txtTotal" value="@total"
                                  type="number" readonly="readonly" />
                </td>
            </tr> *@
        </table>
    </form>

} else if(Model.Subscription != null){
    <form asp-action="Payment" class="form-control mb-3">
        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Subscription[0].ClubId)

                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Subscription[0].Betaald)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subscription[0].Voornaam)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subscription[0].Familienaam)

                </th>

            </tr>

            @foreach (var item in Model.Subscription)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClubId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Betaald)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Voornaam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Familienaam)
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-bierNr="@item.ClubId">

                            <img src="~/Images/delete.png" style="width:25px;height:25px" />
                        </a>

                    </td>
                </tr>
            }

            @*       <tr>
        <td>
        <input type="submit" value="Checkout"
        class="btn btn-default" />
        </td>
        </tr>
        <tr>

        <td id="cart-total">
        Total  <input id="txtTotal" value="@total"
        type="number" readonly="readonly" />
        </td>
        </tr> *@
        </table>
    </form>
}
else
{
    @Html.Raw("Your shoppingcart is empty at the moment")
}

<div>
    @if (SignInManager.IsSignedIn(User))
    {
        <h5>You are logged in </h5>

        <form method="post" asp-controller="ShoppingCart" asp-action="Checkout">
            <button type="submit" class="btn">Bestel</button>
        </form>
    }
    else
    {
        <h5>Please log in before ordering</h5>
        <button class="btn btn-primary">
            <a class="text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </button>
        <button class="btn btn-primary">
            <a class="text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </button>
    }
</div>


