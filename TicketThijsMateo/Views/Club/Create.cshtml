@model TicketThijsMateo.ViewModels.SubscriptionCreateVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Subscription for @Model.ClubNaam</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" required/>
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voornaam" class="control-label"></label>
                <input asp-for="Voornaam" class="form-control" required/>
                <span asp-validation-for="Voornaam" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ClubId" class="control-label"></label>
                <input asp-for="ClubId" class="form-control" />
                <span asp-validation-for="ClubId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soortplaatsnr" class="control-label"></label>
                @*    <input asp-for="Brouwernr" class="form-control" />*@
                <select asp-for="Soortplaatsnr" class="form-control"
                        asp-items="@Model.Soortplaatsen">
                    <option value="">Please select</option>
                </select>
                <span asp-validation-for="Soortplaatsnr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
